<?xml version="1.0" encoding="UTF-8"?>
<packages:packages
        xmlns:packages="http://www.wpkg.org/packages" xmlns:wpkg="http://www.wpkg.org/wpkg" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.wpkg.org/packages ../xsd/packages.xsd" >

<package 
	id="flash_plugin"
	name="Adobe Shockwave Player 11.6.7.637"
	revision="%version%"
	reboot="false"
	priority="880">
 
	<variable name="version" value="11.6.7.637" />
 
	<check type="uninstall" condition="versiongreaterorequal" path="Adobe Shockwave Player 11.6" value="%version%" />
 
	<install cmd='msiexec /i %SOFTWARE%\adobe\Shockwave_Installer_11.6.msi /qn' />
 
        <upgrade include="install" />
 
	<remove cmd='%COMSPEC% /C if exist "C:\Windows\SysWOW64\Adobe\Shockwave 11\uninstaller.exe" "C:\Windows\SysWOW64\Adobe\Shockwave 11\uninstaller.exe"' />
	<remove cmd='%COMSPEC% /C if exist "C:\Windows\System32\Adobe\Shockwave 11\uninstaller.exe" "C:\Windows\System32\Adobe\Shockwave 11\uninstaller.exe"' />
 
</package>

</packages:packages>
